@{
	Layout = "_AdminLayout";
	ViewData["Title"] = "Index";
}

<div class="card">
	<div class="container">
		<h1>Division</h1>
		<p><a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal-form">Create New</a></p>
		<div class="col-md-4">
		<div class="modal fade" id="modal-form" tabindex="-1" role="dialog" aria-labelledby="modal-form" aria-hidden="true">
		  <div class="modal-dialog modal-dialog-centered modal-md" role="document">
			<div class="modal-content">
			  <div class="modal-body p-0">
				<div class="card card-plain">
				  <div class="card-header pb-0 text-left">
					<h3 class="font-weight-bolder text-info text-gradient">Create Division</h3>
				  </div>
				  <div class="card-body">
					<form role="form text-left">
					  <label>Nama</label>
					  <div class="input-group mb-3">
						<input type="text" class="form-control" placeholder="Nama Division" aria-label="Nama" id="Name">
					  </div>
					  <div class="text-center">
						<button type="submit" class="btn btn-round bg-gradient-info btn-lg w-100 mt-4 mb-0" onclick="save()">Save</button>
					  </div>
					</form>
				  </div>
				</div>
			  </div>
			</div>
		  </div>
		</div>
	</div>
	<table class="table center" id="tableDivision">
		<thead>
			<tr>
				<th>No</th>
				<th>Nama</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
		</tbody>
	</table>
</div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.1/js/dataTables.bootstrap5.min.js"></script>
<script src="~/js/division.js"></script>